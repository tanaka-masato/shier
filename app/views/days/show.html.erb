<%= @day.day %>
<%= @day.contents %>
<%= attachment_image_tag @day, :image, format: 'jpeg', size: "100x100" %>

<%= render 'comment', collection: @commentall %>
<div id="commentsFormContainer">
  <%= form_with model: @comment do |form| %>
    <%= form.text_area :comment, id: "comment" %>
    <%= form.hidden_field :day_id, :value => @day.id %>
    <%= form.hidden_field :user_id, :value => current_user.id %>
    <%= form.submit "登録する" %>
  <% end %>
</div>

